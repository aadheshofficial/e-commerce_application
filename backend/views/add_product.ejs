<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Product</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container mt-5">
    <h2>Add Product</h2>
    <form action="/add-product" method="POST">
      <!-- Title -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title" required />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description" required></textarea>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" name="price" required />
      </div>

      <!-- Discount Percentage -->
      <div class="mb-3">
        <label class="form-label">Discount Percentage</label>
        <input type="number" class="form-control" name="discountPercentage" step="0.01" />
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label class="form-label">Category</label>
        <select class="form-control" name="category" required>
          <option value="">Select Category</option>
          <option value="65a7e24602e12c44f599442c">BallBearings</option>
          
        </select>
      </div>
      

      <!-- Brand -->
      <div class="mb-3">
        <label class="form-label">Brand</label>
        <select class="form-control" name="brand" required>
          <option value="">Select Brand</option>
          <option value="65a7e20102e12c44f59943da
          ">BearingCo</option>
         
        
        </select>
      </div>

      <!-- Stock Quantity -->
      <div class="mb-3">
        <label class="form-label">Stock Quantity</label>
        <input type="number" class="form-control" name="stockQuantity" required />
      </div>

      <!-- Thumbnail URL -->
      <div class="mb-3">
        <label class="form-label">Thumbnail URL</label>
        <input
          type="url"
          class="form-control"
          name="thumbnail"
          placeholder="Enter thumbnail image URL"
          required
        />
      </div>

      <!-- Images URLs -->
      <div class="mb-3">
        <label class="form-label">Image URLs</label>
        <div id="imageUrlsContainer">
          <div class="input-group mb-2">
            <input
              type="url"
              class="form-control"
              name="images[]"
              placeholder="Enter image URL"
              required
            />
            <button class="btn btn-danger remove-image-btn" type="button">
              Remove
            </button>
          </div>
        </div>
        <button type="button" id="addImageBtn" class="btn btn-secondary">
          Add Another Image
        </button>
      </div>

      <!-- Is Deleted -->
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" name="isDeleted" />
        <label class="form-check-label">Mark as Deleted</label>
      </div>

      <div class="mb-3">
        <label class="form-label">Updated At</label>
        <input type="datetime-local" class="form-control" name="updatedAt" />
      </div>
    
      <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
  </div>

  <script>
    // Handle dynamic addition of image URL fields
    document.getElementById('addImageBtn').addEventListener('click', function () {
      const container = document.getElementById('imageUrlsContainer');
      const div = document.createElement('div');
      div.className = 'input-group mb-2';

      const input = document.createElement('input');
      input.type = 'url';
      input.name = 'images[]';
      input.placeholder = 'Enter image URL';
      input.className = 'form-control';
      input.required = true;

      const button = document.createElement('button');
      button.type = 'button';
      button.className = 'btn btn-danger remove-image-btn';
      button.textContent = 'Remove';
      button.addEventListener('click', function () {
        container.removeChild(div);
      });

      div.appendChild(input);
      div.appendChild(button);
      container.appendChild(div);
    });

    // Add remove functionality for initial remove buttons (if any)
    document.querySelectorAll('.remove-image-btn').forEach(function (button) {
      button.addEventListener('click', function () {
        const div = this.parentElement;
        div.parentElement.removeChild(div);
      });
    });
  </script>
</body>
</html>
